<h2 class="page__title">
  <%= __('archive.all') %>
</h2>

<div class="page__content">
  <section class="archive__index">
    <h5 id="Index">
      <%= __('page.index') %>
    </h5>

    <% site.posts.years().toPage(12).forEach(page => { %>

      <div class="row center">
        <% page.forEach(year => { %>

          <div class="archive__item one columns">
            <a href="/archives/#<%= year %>"><%= year %></a>
          </div>

        <% }) %>
      </div>

    <% }) %>
  </section>

  <% site.posts.years().forEach(year => { %>

    <section class="archive-posts">
      <h4 id="<%= year %>">
        <%= _p('post.about', year) %> <a href="#Index">â†‘</a>
      </h4>

      <% site.posts.filterByYear(year).forEach(post => { %>

        <%- partial('post/_partial/resume', {post: post})  %>

      <% }) %>
    </section>

  <% }) %>
</div>
