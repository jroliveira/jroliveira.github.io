.container
  max-width 800px

.header
  margin-top 2rem
  text-align center

.title
  & > a
    color #222

.docs-header
  text-transform uppercase
  font-size 1.4rem
  letter-spacing .2rem
  font-weight 600

.docs-section
  border-top 1px solid #eee
  padding 4rem 0
  margin-bottom 0

.post
  padding 2rem 0

.post-date,
.fa
  color #777

.highlight
  figcaption
    margin 1em 1em

h2
  margin-bottom 4rem

h4
  & > small
    font-size 0.55em

h6
  & > small
    font-size 0.7em

a
  &:not(.button)
    text-decoration none
  &:not(.button):hover
    text-decoration underline

@media (min-width: 550px)
  .header
    margin-top 12rem
  .docs-section
    padding 6rem 0
  .post
    padding 4rem 0
  .column, .columns
    margin-left 0%
