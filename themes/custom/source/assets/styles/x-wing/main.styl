@font-face
  font-family Orbitron
  src url('/assets/fonts/Orbitron-Regular.ttf')

.x-wing__title
.x-wing__main
.x-wing__ref
.x-wing__rules h5
  font-family Orbitron

.x-wing__ref
  background-image url(/assets/images/shared/link-external.svg)
  background-position center right
  background-repeat no-repeat
  background-size 0.857em
  font-size 1.2rem
  padding-right 1.1em

  & > img
    width 16px
    height 16px

.x-wing__title
  small
    font-size 50%

.x-wing__rules
  & > ul
    margin 1.5rem 0 !important

  ul
  ol
    font-size 96% !important
    line-height 1.8

  ul
  ol
    &[type=""]
    &[type="a"]
    &[type="i"]
      margin 1.5rem 0 1.5rem 1.5rem

    &[type=""]
      list-style none

    &[type="a"]
      list-style lower-alpha

    &[type="i"]
      list-style lower-roman

  ul[type=""] > li > ol
    list-style decimal
    margin 1.5rem 0 1.5rem 1.5rem !important

  .note
    display inline-block
    background-color #f9f9f9
    border-radius 5px
    padding 0.5rem 1rem

    ul
    ul *
      margin 0
      list-style-type "âœ“ "

      ul
        margin 0 1.5rem

  li:has(> i[class*="xf-token-"])
    line-height 2.2rem

i[class*="xf-"]
  font-size 1.7rem

i[class*="xf-token-"]
  font-size 2.5rem

.xf-recurring
.xf-negativerecurring
  font-size 2.0rem
  font-weight bolder

.xf-token-calculate
.xf-token-focus
  color #35B43B

.xf-token-disarm
.xf-token-jam
  color #F39126

.xf-rangebonusindicator
.xf-token-deplete
.xf-token-ion
.xf-token-strain
.xf-token-stress
  color #EB1F28

.xf-token-force
  color #AD6CFE

@media (pointer: coarse), (hover: none)
  [title]
    position relative

  [title]:focus::after
    background-color #fff
    border 1px solid #f1f1f1
    border-radius 2px
    box-shadow 2px 2px 3px #ccc
    color #000
    content attr(title)
    font-size 1rem
    left 0
    padding 0 5px
    position absolute
    top 90%
    z-index 1
