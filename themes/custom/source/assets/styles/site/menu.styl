.menu
  display flex
  float right
  list-style none
  margin 0

.menu-item
  margin 0 0 0 8px

  & small
    margin 0 -4px

.menu-item__icon
.menu-item__img
  border-radius 5px
  padding 4px

.menu-item__icon:has(> .xf)
  padding 2.5px

.menu-item__icon
  background-color #222
  border solid 1px #222
  color #f1f1f1

.menu-item__icon
.menu-item__icon > .xf
  font-size 14px

  &:hover
    color #f1f1f1
    text-decoration none !important

.menu-item__img
  background-color #fff
  border solid 1px #ccc
  height 16px
  margin-top -1px
  width 16px

@media (min-width: 550px)
  .menu-item__icon
  .menu-item__icon > .xf
    font-size 18px

  .menu-item__img
    height 20px
    width 20px
