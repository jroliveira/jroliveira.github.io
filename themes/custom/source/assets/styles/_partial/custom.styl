body
  min-height 100vh
  position relative

.title
  margin 4rem 0 4rem 0
  text-align center

  & > a
    color #222

.icon
  height 24px
  width 24px

a
  &:not(.button)
    text-decoration none

  &:not(.button):hover
    text-decoration underline

@media (min-width: 550px)
  .column
  .columns
    margin-left 0%

  .icon
    height 28px
    width 28px

  .search-button
    font-size 16px
